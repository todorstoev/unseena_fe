{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "noEmit": true,
    "strict": true,
    "allowJs": false,
    "jsx": "preserve",
    "module": "ESNext",
    "composite": false,
    "incremental": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declarationMap": true,
    "inlineSources": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015.iterable"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "env.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "playwright.config.ts"
  ]
}

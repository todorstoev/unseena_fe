{
  "compilerOptions": {
    "incremental": true,
    "composite": false,
    "target": "ES6",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext", "es2015.iterable", "ES2015"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"],
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": false,
    "downlevelIteration": true,
    "inlineSources": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
  },
  "include": [
    "env.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "./tests/jest-setup.ts",
    "./jest.setup.js",
  ],
  "exclude": ["node_modules", "public", "playwright.config.ts"],
}
